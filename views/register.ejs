<% include ./partials/header.ejs %>
<div class=" w-full h-screen bg-zinc-300 flex item-center justify-center" >
    <div class=" w-80 h-[70vh] bg-zinc-100 px-4 py-7 rounded-md mt-24">
        <h1 class="mx-9 opacity-200 font-bold text-xl mb-5 capitalize">Welcome to Pinterest</h1>
        <form action="/register" method="post">
            <input class="block rounded-md  w-full px-3  my-3  py-2" type="text" name="username" placeholder="Username" id="">
            <input class="block rounded-md  w-full px-3  my-3  py-2" type="text" name="fullname" placeholder="fullname" id="">
            <input class="block rounded-md  w-full px-3  my-3  py-2" type="email" name="email" placeholder="Email" required>
            <input class="block rounded-md  w-full px-3  my-3  py-2" type="password" name="password" placeholder="password">
            <input class="block rounded-md  w-full px-3  my-3  py-2" type="date" id="birthday" name="birthday" placeholder="DOB">
            <input class="block rounded-lg bg-red-600 w-full px-3  my-3  py-2" type="submit" value="Continue">
        </form>
        <p class="text-xs font-semibold text-zinc-700 mt-5 mx-auto w-3/4 text-center">By continuing, you agree to Pinterest's  <b>Terms of Service</b> and acknowledge you've read our <b> Privacy PolicyNotice at collection</b></p>
        <a href="/" class="text-sm font-semibold text-zinc-700  mx-11 py-0.5">Already a member? Log in</a>
    </div>
</div>
<% include ./partials/footer.ejs %>