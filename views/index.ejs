<% include ./partials/header.ejs %>
<div class=" bg-gradient-to-r from-purple-500 to-pink-500 w-full h-screen bg-zinc-300 flex item-center justify-center" >
    <div class=" w-80 h-[60vh] bg-zinc-100 px-4 py-11 rounded-md mt-24">
        <h1 class="mx-9 opacity-200 font-bold mb-5 text-xl capitalize">Welcome to Pinterest</h1>
        <form action="/login" method="post">
            <input class="block rounded-md  w-full px-3  my-3  py-2" type="text" name="username" placeholder="Username" id="">
            <input class="block rounded-md  w-full px-3  my-3  py-2" type="password" name="password" placeholder="password">
